{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "build",
    "paths": {
      "@MagicProvider/*": ["src/provider/MagicProvider/*"],
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"],
      "@context/*": ["context/*"],
      "@assets/*": ["src/assets/*"],
      "@helpers": ["src/utils/helpers"],
      "@provider": ["src/provider/*"],
      "@utils": ["src/utils/*"],
      "@localization": ["src/localization/*"]
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true

    // Not using this setting because its only used to require the package.json file, and that would change the
    // structure of the files in the dist directory because package.json is not located inside src. It would be nice
    // to use import instead of require(), but its not worth the tradeoff of restructuring the build (for now).
    // "resolveJsonModule": true,
  },
  "include": ["src/**/*", "src/hooks/useSolana.tsx"],
  "exclude": ["__tests__", "src/**/*.spec.ts", "src/**/*.js"],
  "jsdoc": {
    "out": "support/jsdoc",
    "access": "public"
  }
}
